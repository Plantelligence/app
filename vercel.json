{
  "version": 2,
  "installCommand": "npm install --workspaces --if-present",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "frontend/dist",
        "buildCommand": "npm run build --workspace=plantelligence-frontend"
      }
    },
    {
      "src": "frontend/api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "frontend/api/backend/**",
          "backend/node_modules/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/frontend/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/dist/assets/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/frontend/dist/images/$1"
    },
    {
      "src": "/(policy-styles.css|cookies.html|eula.html|privacidade.html|seguranca.html|termos.html)",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}